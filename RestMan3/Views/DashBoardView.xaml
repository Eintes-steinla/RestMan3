<UserControl x:Class="RestMan3.Views.DashBoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="2000" d:DesignWidth="1200"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#0066FF"/>
        <SolidColorBrush x:Key="LightBlue" Color="#E6F0FF"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#52C41A"/>
        <SolidColorBrush x:Key="WarningOrange" Color="#FAAD14"/>
        <SolidColorBrush x:Key="DangerRed" Color="#FF4D4F"/>
        <SolidColorBrush x:Key="DarkText" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="GrayText" Color="#666666"/>
        <SolidColorBrush x:Key="LightGray" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E0E0E0"/>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.05" 
                                    BlurRadius="10" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat Card Style -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.05" 
                                    BlurRadius="10" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Tab Button Style -->
        <Style x:Key="TabButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource GrayText}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="{StaticResource LightBlue}"/>
                    <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <!-- Stats Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}" Margin="0,0,10,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" VerticalAlignment="Center" Margin="0,0,15,0">
                            <Image Width="45" Height="45" 
                                   Source="/Assets/Icons/iconsDollar48.png" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Doanh thu" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource DarkText}"/>
                            <TextBlock Text="4 đơn đã xong" FontSize="12" Foreground="{StaticResource GrayText}" Margin="0,2,0,5"/>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="1,115,000" FontSize="22" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}"/>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" Margin="10,0,0,0">
                                    <Image Width="10" Height="10" 
                                           Source="/Assets/Icons/iconsUp24.png" Margin="0,0,5,0"/>
                                    <TextBlock Text="100%" FontSize="10" Foreground="{StaticResource SuccessGreen}" FontWeight="Medium"/>
                                </StackPanel>
                            </StackPanel>
                            <TextBlock Text="Hôm qua 0" FontSize="11" Foreground="{StaticResource GrayText}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}" Margin="5,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" VerticalAlignment="Center" Margin="0,0,15,0">
                            <Image Width="40" Height="40" 
                                   Source="/Assets/Icons/iconsPencil64.png" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Đơn đang phục vụ" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource DarkText}"/>
                            <TextBlock Text="1 đơn đang phục vụ" FontSize="12" Foreground="{StaticResource GrayText}" Margin="0,2,0,5"/>
                            <TextBlock Text="185,000" FontSize="22" FontWeight="Medium" Foreground="{StaticResource SuccessGreen}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource StatCardStyle}" Margin="10,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" VerticalAlignment="Center" Margin="0,0,15,0">
                            <Image Width="45" Height="45" 
                                   Source="/Assets/Icons/iconsUser48.png" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Khách hàng" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource DarkText}"/>
                            <TextBlock Text="Lượt khách hôm nay" FontSize="12" Foreground="{StaticResource GrayText}" Margin="0,2,0,5"/>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="12" FontSize="22" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}"/>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" Margin="10,0,0,0">
                                    <Image Width="10" Height="10" 
                                           Source="/Assets/Icons/iconsUp24.png" Margin="0,0,5,0"/>
                                    <TextBlock Text="100%" FontSize="10" Foreground="{StaticResource SuccessGreen}" FontWeight="Medium"/>
                                </StackPanel>
                            </StackPanel>
                            <TextBlock Text="Hôm qua 0" FontSize="11" Foreground="{StaticResource GrayText}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Charts Section -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column - Charts -->
                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                    <!-- Doanh số hôm nay -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="300"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,20" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="DOANH SỐ HÔM NAY" FontSize="16" FontWeight="Bold" Foreground="#333"/>
                                    <Image Source="/Assets/Icons/iconsRight30.png" Margin="5,0" Width="10" Height="10"/>
                                    <TextBlock Text="1,699,000" FontSize="16" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                    <TextBlock Text="Hôm nay" FontWeight="Medium" Foreground="{StaticResource PrimaryBlue}" Margin="0,0,5,0"/>
                                    <Image Source="/Assets/Icons/iconsDownArrow50.png" Width="10" Height="10" />
                                </StackPanel>
                            </Grid>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                                <RadioButton Content="Theo ngày" FontWeight="Medium" Style="{StaticResource TabButtonStyle}" GroupName="ChartView"/>
                                <RadioButton Content="Theo giờ"  FontWeight="Medium" Style="{StaticResource TabButtonStyle}" IsChecked="True" GroupName="ChartView"/>
                                <RadioButton Content="Theo thứ"  FontWeight="Medium" Style="{StaticResource TabButtonStyle}" GroupName="ChartView"/>
                            </StackPanel>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <UniformGrid Columns="1" Grid.Column="0" Margin="0,0,15,30">
                                    <TextBlock Text="700k" />
                                    <TextBlock Text="600k" />
                                    <TextBlock Text="500k" />
                                    <TextBlock Text="400k" />
                                    <TextBlock Text="300k" />
                                    <TextBlock Text="200k" />
                                    <TextBlock Text="100k" />
                                    <TextBlock Text="0" />
                                </UniformGrid>

                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <UniformGrid Grid.Row="0" Columns="1">
                                        <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1"/>
                                    </UniformGrid>

                                    <Grid Grid.Row="0" Margin="40,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Rectangle Grid.Column="0" Width="45" VerticalAlignment="Bottom" Height="220" 
                               Fill="{StaticResource PrimaryBlue}" RadiusX="2" RadiusY="2"/>

                                        <Rectangle Grid.Column="1" Width="45" VerticalAlignment="Bottom" Height="60" 
                               Fill="{StaticResource PrimaryBlue}" RadiusX="2" RadiusY="2"/>

                                        <Rectangle Grid.Column="2" Width="45" VerticalAlignment="Bottom" Height="200" 
                               Fill="{StaticResource PrimaryBlue}" RadiusX="2" RadiusY="2"/>
                                    </Grid>

                                    <UniformGrid Grid.Row="1" Columns="3" Margin="40,5,40,0">
                                        <TextBlock Text="06:00" HorizontalAlignment="Center" />
                                        <TextBlock Text="07:00" HorizontalAlignment="Center" />
                                        <TextBlock Text="08:00" HorizontalAlignment="Center" />
                                    </UniformGrid>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                        <Rectangle Width="12" Height="12" Fill="{StaticResource PrimaryBlue}" Margin="0,0,8,0"/>
                                        <TextBlock Text="Chi nhánh trung tâm" FontSize="12" Foreground="{StaticResource GrayText}"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Số lượng khách hôm nay -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="300"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,20">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="SỐ LƯỢNG KHÁCH HÔM NAY" FontSize="16" FontWeight="Bold" Foreground="#333"/>
                                    <Image Source="/Assets/Icons/iconsRight30.png" Margin="10,0,5,0" Width="10" Height="10"/>
                                    <TextBlock Text="13" FontSize="16" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                    <TextBlock Text="Hôm nay" FontWeight="Medium" Foreground="{StaticResource PrimaryBlue}" Margin="0,0,5,0"/>
                                    <Image Source="/Assets/Icons/iconsDownArrow50.png" Width="10" Height="10" />
                                </StackPanel>
                            </Grid>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <UniformGrid Grid.Column="0" Columns="1" Margin="0,0,15,30">
                                    <TextBlock Text="8" />
                                    <TextBlock Text="6.9" />
                                    <TextBlock Text="5.7" />
                                    <TextBlock Text="4.6" />
                                    <TextBlock Text="3.4" />
                                    <TextBlock Text="2.3" />
                                    <TextBlock Text="1.1" />
                                    <TextBlock Text="0" />
                                </UniformGrid>

                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <UniformGrid Grid.Row="0" Columns="1">
                                        <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1"/>
                                    </UniformGrid>

                                    <Canvas Grid.Row="0" Margin="10,0">
                                        <Polyline Points="0,30 40,50 80,240 120,240 160,240 200,240 240,240 280,240 320,240 360,240 400,240 440,240 480,240" 
                              Stroke="{StaticResource PrimaryBlue}" StrokeThickness="2" />

                                        <Ellipse Canvas.Left="-4" Canvas.Top="26" Width="8" Height="8" Fill="White" Stroke="{StaticResource PrimaryBlue}" StrokeThickness="2"/>
                                        <Ellipse Canvas.Left="36" Canvas.Top="46" Width="8" Height="8" Fill="White" Stroke="{StaticResource PrimaryBlue}" StrokeThickness="2"/>
                                        <Ellipse Canvas.Left="76" Canvas.Top="236" Width="8" Height="8" Fill="White" Stroke="{StaticResource PrimaryBlue}" StrokeThickness="2"/>
                                    </Canvas>

                                    <UniformGrid Grid.Row="1" Columns="9" Margin="0,5,0,0">
                                        <TextBlock Text="06:00" />
                                        <TextBlock Text="08:00" />
                                        <TextBlock Text="10:00" />
                                        <TextBlock Text="12:00" />
                                        <TextBlock Text="14:00" />
                                        <TextBlock Text="16:00" />
                                        <TextBlock Text="18:00" />
                                        <TextBlock Text="20:00" />
                                        <TextBlock Text="22:00" />
                                    </UniformGrid>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                        <Rectangle Width="12" Height="12" Fill="{StaticResource PrimaryBlue}" Margin="0,0,8,0"/>
                                        <TextBlock Text="Chi nhánh trung tâm" FontSize="12" Foreground="{StaticResource GrayText}"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Top 10 hàng hóa -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,0">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,20" VerticalAlignment="Center">
                                <TextBlock Text="TOP 10 HÀNG HÓA BÁN CHẠY 7 NGÀY QUA" FontSize="16" FontWeight="Bold" Foreground="#333"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,5,0">
                                        <TextBlock FontWeight="Medium" Text="Theo doanh thu" Foreground="{StaticResource PrimaryBlue}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <Image Source="/Assets/Icons/iconsDownArrow50.png" Width="10" Height="10" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5,0,0,0">
                                        <TextBlock FontWeight="Medium" Text="7 ngày qua" Foreground="{StaticResource PrimaryBlue}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <Image Source="/Assets/Icons/iconsDownArrow50.png" Width="10" Height="10" />
                                    </StackPanel>
                                </StackPanel>
                            </Grid>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <UniformGrid Grid.Column="0" Columns="1" Margin="0,0,15,35">
                                    <TextBlock Text="Mint Tea" />
                                    <TextBlock Text="Lemon Juice" />
                                    <TextBlock Text="MILANO" />
                                    <TextBlock Text="Súp hành kiểu Pháp" />
                                    <TextBlock Text="CUBA LIBRE" />
                                </UniformGrid>

                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>

                                    <UniformGrid Grid.Row="0" Rows="1" Columns="12">
                                        <Border BorderBrush="#F0F0F0" BorderThickness="1,0,0,0"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="1,0,0,0"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="1,0,0,0"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="1,0,0,0"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="1,0,0,0"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="1,0,0,0"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="1,0,0,0"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="1,0,0,0"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="1,0,0,0"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="1,0,0,0"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="1,0,0,0"/>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="1,0,0,0"/>
                                    </UniformGrid>

                                    <UniformGrid Grid.Row="0" Columns="1" Margin="0,0,0,35">
                                        <Rectangle HorizontalAlignment="Left" Fill="{StaticResource PrimaryBlue}" 
                               Height="22" Width="450" RadiusX="2" RadiusY="2" Margin="0,0,0,10"/>
                                        <Rectangle HorizontalAlignment="Left" Fill="{StaticResource PrimaryBlue}" 
                               Height="22" Width="380" RadiusX="2" RadiusY="2" Margin="0,0,0,10"/>
                                        <Rectangle HorizontalAlignment="Left" Fill="{StaticResource PrimaryBlue}" 
                               Height="22" Width="320" RadiusX="2" RadiusY="2" Margin="0,0,0,10"/>
                                        <Rectangle HorizontalAlignment="Left" Fill="{StaticResource PrimaryBlue}" 
                               Height="22" Width="280" RadiusX="2" RadiusY="2" Margin="0,0,0,10"/>
                                        <Rectangle HorizontalAlignment="Left" Fill="{StaticResource PrimaryBlue}" 
                               Height="22" Width="250" RadiusX="2" RadiusY="2" Margin="0,0,0,10"/>
                                    </UniformGrid>

                                    <UniformGrid Grid.Row="1" Rows="1" Columns="12" Margin="-15,5,0,0">
                                        <TextBlock Text="20k" />
                                        <TextBlock Text="30k" />
                                        <TextBlock Text="60k" />
                                        <TextBlock Text="90k" />
                                        <TextBlock Text="120k" />
                                        <TextBlock Text="150k" />
                                        <TextBlock Text="180k" />
                                        <TextBlock Text="210k" />
                                        <TextBlock Text="240k" />
                                        <TextBlock Text="270k" />
                                        <TextBlock Text="300k" />
                                        <TextBlock Text="330k" />
                                    </UniformGrid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Right Column - Activities -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                    <Grid Margin="20,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="CÁC HOẠT ĐỘNG GẦN ĐÂY" 
                   FontSize="16" FontWeight="Bold" Foreground="#333" 
                   Margin="0,0,0,20"/>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                            <StackPanel>
                                <Grid Margin="0,0,0,25">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="45"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Rectangle Grid.Column="0" Width="1" Fill="#F0F0F0" Margin="0,40,0,-25" HorizontalAlignment="Center"/>

                                    <Grid Grid.Column="0" VerticalAlignment="Top">
                                        <Ellipse Width="38" Height="38" Fill="#E3F2FD"/>
                                        <Image Source="/Assets/Icons/iconsClipboardBlue48.png" Width="18" Height="18" RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Grid>

                                    <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                        <TextBlock TextWrapping="Wrap" FontSize="14" LineHeight="20">
                            <Run Text="Hoàng - Kinh Doanh" Foreground="{StaticResource PrimaryBlue}"/>
                            <Run Text=" vừa " Foreground="{StaticResource GrayText}"/>
                            <Run Text="bán đơn giao hàng" Foreground="{StaticResource PrimaryBlue}"/>
                            <Run Text=" với giá trị " Foreground="{StaticResource GrayText}"/>
                            <Run Text="627,000" FontWeight="Bold" Foreground="#444"/>
                                        </TextBlock>
                                        <TextBlock Text="33 minutes ago" FontSize="12" Foreground="#BDBDBD" Margin="0,4,0,0" FontStyle="Italic"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Margin="0,0,0,25">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="45"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Rectangle Grid.Column="0" Width="1" Fill="#F0F0F0" Margin="0,40,0,-25" HorizontalAlignment="Center"/>

                                    <Grid Grid.Column="0" VerticalAlignment="Top">
                                        <Ellipse Width="38" Height="38" Fill="#E3F2FD"/>
                                        <Image Source="/Assets/Icons/iconsClipboardBlue48.png" Width="18" Height="18"/>
                                    </Grid>

                                    <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                        <TextBlock TextWrapping="Wrap" FontSize="14">
                            <Run Text="Hương - Kế Toán" Foreground="{StaticResource PrimaryBlue}"/>
                            <Run Text=" vừa " Foreground="{StaticResource GrayText}"/>
                            <Run Text="bán đơn hàng" Foreground="{StaticResource PrimaryBlue}"/>
                            <Run Text=" với giá trị " Foreground="{StaticResource GrayText}"/>
                            <Run Text="185,000" FontWeight="Bold" Foreground="#444"/>
                                        </TextBlock>
