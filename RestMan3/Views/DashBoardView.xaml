<UserControl x:Class="RestMan3.Views.DashBoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#0066FF"/>
        <SolidColorBrush x:Key="LightBlue" Color="#E6F0FF"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#52C41A"/>
        <SolidColorBrush x:Key="WarningOrange" Color="#FAAD14"/>
        <SolidColorBrush x:Key="DangerRed" Color="#FF4D4F"/>
        <SolidColorBrush x:Key="DarkText" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="GrayText" Color="#666666"/>
        <SolidColorBrush x:Key="LightGray" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E0E0E0"/>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.05" 
                                    BlurRadius="10" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat Card Style -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.05" 
                                    BlurRadius="10" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Tab Button Style -->
        <Style x:Key="TabButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource GrayText}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="{StaticResource LightBlue}"/>
                    <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <!-- Stats Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Doanh thu -->
                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}" Margin="0,0,10,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <Ellipse Width="40" Height="40" Fill="{StaticResource LightBlue}" 
                                     Margin="0,0,12,0"/>
                            <TextBlock Text="💰" FontSize="24" Margin="-36,8,0,0"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Text="4 đơn đã xong" 
                                   FontSize="14" Foreground="{StaticResource GrayText}" 
                                   Margin="0,0,0,5"/>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="1,115,000" FontSize="24" FontWeight="Bold" 
                                       Foreground="{StaticResource DarkText}"/>
                            <Border Background="#F0FFF4" CornerRadius="4" Padding="5,2" Margin="10,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="↑" FontSize="12" 
                                               Foreground="{StaticResource SuccessGreen}" 
                                               Margin="0,0,3,0"/>
                                    <TextBlock Text="100%" FontSize="12" 
                                               Foreground="{StaticResource SuccessGreen}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <TextBlock Grid.Row="2" Text="Hôm qua 0" 
                                   FontSize="12" Foreground="{StaticResource GrayText}" 
                                   Margin="0,5,0,0"/>
                    </Grid>
                </Border>

                <!-- Đơn đang phục vụ -->
                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}" Margin="5,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <Ellipse Width="40" Height="40" Fill="#F0FFF4" 
                                     Margin="0,0,12,0"/>
                            <TextBlock Text="✓" FontSize="24" 
                                       Foreground="{StaticResource SuccessGreen}" 
                                       Margin="-36,8,0,0"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Text="0 đơn đang phục vụ" 
                                   FontSize="14" Foreground="{StaticResource GrayText}" 
                                   Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="2" Text="0" FontSize="24" FontWeight="Bold" 
                                   Foreground="{StaticResource DarkText}"/>
                    </Grid>
                </Border>

                <!-- Khách hàng -->
                <Border Grid.Column="2" Style="{StaticResource StatCardStyle}" Margin="10,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <Ellipse Width="40" Height="40" Fill="#E6F0FF" 
                                     Margin="0,0,12,0"/>
                            <TextBlock Text="👤" FontSize="24" Margin="-36,8,0,0"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Text="Khách hàng" 
                                   FontSize="14" Foreground="{StaticResource GrayText}" 
                                   Margin="0,0,0,5"/>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="0" FontSize="24" FontWeight="Bold" 
                                       Foreground="{StaticResource DarkText}"/>
                            <Border Background="#F0FFF4" CornerRadius="4" Padding="5,2" Margin="10,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="↑" FontSize="12" 
                                               Foreground="{StaticResource SuccessGreen}" 
                                               Margin="0,0,3,0"/>
                                    <TextBlock Text="0%" FontSize="12" 
                                               Foreground="{StaticResource SuccessGreen}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <TextBlock Grid.Row="2" Text="Hôm qua 0" 
                                   FontSize="12" Foreground="{StaticResource GrayText}" 
                                   Margin="0,5,0,0"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Charts Section -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column - Charts -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <!-- Doanh số hôm nay -->
                    <Border Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="300"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <Grid Grid.Row="0" Margin="0,0,0,15">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="DOANH SỐ HÔM NAY" 
                                               Style="{StaticResource SectionTitleStyle}" 
                                               Margin="0"/>
                                    <TextBlock Text="⓵" FontSize="14" 
                                               Foreground="{StaticResource PrimaryBlue}" 
                                               Margin="8,0,0,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="1,115,000" FontSize="16" FontWeight="Bold" 
                                               Foreground="{StaticResource PrimaryBlue}" 
                                               Margin="8,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>

                                <ComboBox HorizontalAlignment="Right" Width="120" 
                                          SelectedIndex="0" BorderBrush="{StaticResource BorderGray}">
                                    <ComboBoxItem Content="Hôm nay"/>
                                    <ComboBoxItem Content="Hôm qua"/>
                                    <ComboBoxItem Content="7 ngày qua"/>
                                    <ComboBoxItem Content="30 ngày qua"/>
                                </ComboBox>
                            </Grid>

                            <!-- Tabs -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                                <RadioButton Content="Theo ngày" Style="{StaticResource TabButtonStyle}" 
                                             IsChecked="True" GroupName="ChartView"/>
                                <RadioButton Content="Theo giờ" Style="{StaticResource TabButtonStyle}" 
                                             GroupName="ChartView"/>
                                <RadioButton Content="Theo thứ" Style="{StaticResource TabButtonStyle}" 
                                             GroupName="ChartView"/>
                            </StackPanel>

                            <!-- Chart Area -->
                            <Border Grid.Row="2" BorderBrush="{StaticResource BorderGray}" 
                                    BorderThickness="1" CornerRadius="4" Padding="15">
                                <Grid>
                                    <!-- Y-axis labels -->
                                    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Left" 
                                                Width="60">
                                        <TextBlock Text="2.0 tr" FontSize="11" 
                                                   Foreground="{StaticResource GrayText}" 
                                                   Margin="0,0,0,25"/>
                                        <TextBlock Text="1.7 tr" FontSize="11" 
                                                   Foreground="{StaticResource GrayText}" 
                                                   Margin="0,0,0,25"/>
                                        <TextBlock Text="1.4 tr" FontSize="11" 
                                                   Foreground="{StaticResource GrayText}" 
                                                   Margin="0,0,0,25"/>
                                        <TextBlock Text="1.1 tr" FontSize="11" 
                                                   Foreground="{StaticResource GrayText}" 
                                                   Margin="0,0,0,25"/>
                                        <TextBlock Text="857.1k" FontSize="11" 
                                                   Foreground="{StaticResource GrayText}" 
                                                   Margin="0,0,0,25"/>
                                        <TextBlock Text="571.4k" FontSize="11" 
                                                   Foreground="{StaticResource GrayText}" 
                                                   Margin="0,0,0,25"/>
                                        <TextBlock Text="285.7k" FontSize="11" 
                                                   Foreground="{StaticResource GrayText}"/>
                                    </StackPanel>

                                    <!-- Chart -->
                                    <Grid Margin="70,0,0,30">
                                        <!-- Grid lines -->
                                        <Canvas>
                                            <Line X1="0" Y1="0" X2="600" Y2="0" 
                                                  Stroke="{StaticResource BorderGray}" StrokeThickness="1"/>
                                            <Line X1="0" Y1="40" X2="600" Y2="40" 
                                                  Stroke="{StaticResource BorderGray}" StrokeThickness="1"/>
                                            <Line X1="0" Y1="80" X2="600" Y2="80" 
                                                  Stroke="{StaticResource BorderGray}" StrokeThickness="1"/>
                                            <Line X1="0" Y1="120" X2="600" Y2="120" 
                                                  Stroke="{StaticResource BorderGray}" StrokeThickness="1"/>
                                            <Line X1="0" Y1="160" X2="600" Y2="160" 
                                                  Stroke="{StaticResource BorderGray}" StrokeThickness="1"/>
                                            <Line X1="0" Y1="200" X2="600" Y2="200" 
                                                  Stroke="{StaticResource BorderGray}" StrokeThickness="1"/>
                                            <Line X1="0" Y1="240" X2="600" Y2="240" 
                                                  Stroke="{StaticResource BorderGray}" StrokeThickness="1"/>

                                            <!-- Bar -->
                                            <Rectangle Canvas.Left="220" Canvas.Top="80" 
                                                       Width="40" Height="160" 
                                                       Fill="{StaticResource PrimaryBlue}" 
                                                       RadiusX="4" RadiusY="4"/>
                                        </Canvas>
                                    </Grid>

                                    <!-- X-axis label -->
                                    <TextBlock Text="06:00" FontSize="11" 
                                               Foreground="{StaticResource GrayText}" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Bottom"/>

                                    <!-- Legend -->
                                    <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Bottom" 
                                                Margin="0,0,0,-25">
                                        <Rectangle Width="12" Height="12" 
                                                   Fill="{StaticResource PrimaryBlue}" 
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="Chi nhánh trung tâm" FontSize="11" 
                                                   Foreground="{StaticResource GrayText}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Số lượng khách hôm nay -->
                    <Border Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="250"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,15">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="SỐ LƯỢNG KHÁCH HÔM NAY" 
                                               Style="{StaticResource SectionTitleStyle}" 
                                               Margin="0"/>
                                    <TextBlock Text="⓵" FontSize="14" 
                                               Foreground="{StaticResource PrimaryBlue}" 
                                               Margin="8,0,0,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="0" FontSize="16" FontWeight="Bold" 
                                               Foreground="{StaticResource PrimaryBlue}" 
                                               Margin="8,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>

                                <ComboBox HorizontalAlignment="Right" Width="120" 
                                          SelectedIndex="0" BorderBrush="{StaticResource BorderGray}">
                                    <ComboBoxItem Content="Hôm nay"/>
                                </ComboBox>
                            </Grid>

                            <Border Grid.Row="1" BorderBrush="{StaticResource BorderGray}" 
                                    BorderThickness="1" CornerRadius="4" Padding="15">
                                <Grid>
                                    <TextBlock Text="Chưa có dữ liệu" FontSize="14" 
                                               Foreground="{StaticResource GrayText}" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Top 10 hàng hóa -->
                    <Border Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,15">
                                <TextBlock Text="TOP 10 HÀNG HÓA BÁN CHẠY 7 NGÀY QUA" 
                                           Style="{StaticResource SectionTitleStyle}" 
                                           Margin="0"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="THEO DOANH THU" 
                                            Foreground="{StaticResource PrimaryBlue}" 
                                            Background="Transparent" 
                                            BorderThickness="0" 
                                            Cursor="Hand" 
                                            FontSize="12" 
                                            FontWeight="SemiBold" 
                                            Margin="0,0,10,0"/>
                                    <ComboBox Width="120" SelectedIndex="0" 
                                              BorderBrush="{StaticResource BorderGray}">
                                        <ComboBoxItem Content="7 ngày qua"/>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>

                            <!-- Horizontal Bar Chart -->
                            <StackPanel Grid.Row="1" Margin="0,10,0,0">
                                <!-- Bar 1 -->
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Súp kem rau 4 mùa" 
                                               FontSize="13" Foreground="{StaticResource DarkText}"/>
                                    <Border Grid.Column="1" Height="24" 
                                            Background="{StaticResource LightBlue}" 
                                            CornerRadius="4" Margin="10,0"/>
                                    <TextBlock Grid.Column="2" Text="3 tr" 
                                               FontSize="13" Foreground="{StaticResource GrayText}" 
                                               HorizontalAlignment="Right"/>
                                </Grid>

                                <!-- Bar 2 -->
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Thịt người ở phổmai viên chiên..." 
                                               FontSize="13" Foreground="{StaticResource DarkText}"/>
                                    <Border Grid.Column="1" Height="24" 
                                            Background="{StaticResource LightBlue}" 
                                            CornerRadius="4" Margin="10,0">
                                        <Border.Width>
                                            <Binding>
                                                <Binding.Source>
                                                    <sys:Double xmlns:sys="clr-namespace:System;assembly=mscorlib">0.95</sys:Double>
                                                </Binding.Source>
                                            </Binding>
                                        </Border.Width>
                                    </Border>
                                    <TextBlock Grid.Column="2" Text="2.8 tr" 
                                               FontSize="13" Foreground="{StaticResource GrayText}" 
                                               HorizontalAlignment="Right"/>
                                </Grid>

                                <!-- Bar 3 -->
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Xúc xích Đức nướng mơ tạt vàng" 
                                               FontSize="13" Foreground="{StaticResource DarkText}"/>
                                    <Border Grid.Column="1" Height="24" 
                                            Background="{StaticResource LightBlue}" 
                                            CornerRadius="4" Margin="10,0">
                                        <Border.Width>
                                            <Binding>
                                                <Binding.Source>
                                                    <sys:Double xmlns:sys="clr-namespace:System;assembly=mscorlib">0.85</sys:Double>
                                                </Binding.Source>
                                            </Binding>
                                        </Border.Width>
                                    </Border>
                                    <TextBlock Grid.Column="2" Text="2.5 tr" 
                                               FontSize="13" Foreground="{StaticResource GrayText}" 
                                               HorizontalAlignment="Right"/>
                                </Grid>

                                <!-- Add more bars similarly -->
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Súp kem gà nử hoàng" 
                                               FontSize="13" Foreground="{StaticResource DarkText}"/>
                                    <Border Grid.Column="1" Height="24" 
                                            Background="{StaticResource LightBlue}" 
                                            CornerRadius="4" Margin="10,0">
                                        <Border.Width>
                                            <Binding>
                                                <Binding.Source>
                                                    <sys:Double xmlns:sys="clr-namespace:System;assembly=mscorlib">0.75</sys:Double>
                                                </Binding.Source>
                                            </Binding>
                                        </Border.Width>
                                    </Border>
                                    <TextBlock Grid.Column="2" Text="2.3 tr" 
                                               FontSize="13" Foreground="{StaticResource GrayText}" 
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Right Column - Activities -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="CÁC HOẠT ĐỘNG GẦN ĐÂY" 
                                   Style="{StaticResource SectionTitleStyle}"/>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- Activity Item -->
                                <Border BorderBrush="{StaticResource BorderGray}" 
                                        BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse Grid.Column="0" Width="32" Height="32" 
                                                 Fill="{StaticResource LightBlue}" 
                                                 VerticalAlignment="Top"/>
                                        <TextBlock Grid.Column="0" Text="👤" FontSize="16" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Top" Margin="0,8,0,0"/>

                                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                            <TextBlock TextWrapping="Wrap" FontSize="13" 
                                                       Foreground="{StaticResource DarkText}">
                                                <Run Text="deku vừa bán đơn hàng với giá trị"/>
                                                <Run Text="495,000" FontWeight="Bold"/>
                                            </TextBlock>
                                            <TextBlock Text="a minute ago" FontSize="11" 
                                                       Foreground="{StaticResource GrayText}" 
                                                       Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- More activity items... -->
                                <Border BorderBrush="{StaticResource BorderGray}" 
                                        BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse Grid.Column="0" Width="32" Height="32" 
                                                 Fill="{StaticResource LightBlue}" 
                                                 VerticalAlignment="Top"/>
                                        <TextBlock Grid.Column="0" Text="👤" FontSize="16" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Top" Margin="0,8,0,0"/>

                                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                            <TextBlock TextWrapping="Wrap" FontSize="13" 
                                                       Foreground="{StaticResource DarkText}">
                                                <Run Text="deku vừa bán đơn hàng với giá trị"/>
                                                <Run Text="280,000" FontWeight="Bold"/>
                                            </TextBlock>
                                            <TextBlock Text="2 minutes ago" FontSize="11" 
                                                       Foreground="{StaticResource GrayText}" 
                                                       Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <Border BorderBrush="{StaticResource BorderGray}" 
                                        BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse Grid.Column="0" Width="32" Height="32" 
                                                 Fill="{StaticResource LightBlue}" 
                                                 VerticalAlignment="Top"/>
                                        <TextBlock Grid.Column="0" Text="👤" FontSize="16" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Top" Margin="0,8,0,0"/>

                                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                            <TextBlock TextWrapping="Wrap" FontSize="13" 
                                                       Foreground="{StaticResource DarkText}">
                                                <Run Text="deku vừa bán đơn hàng với giá trị"/>
                                                <Run Text="250,000" FontWeight="Bold"/>
                                            </TextBlock>
                                            <TextBlock Text="3 minutes ago" FontSize="11" 
                                                       Foreground="{StaticResource GrayText}" 
                                                       Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <Border BorderBrush="{StaticResource BorderGray}" 
                                        BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse Grid.Column="0" Width="32" Height="32" 
                                                 Fill="{StaticResource LightBlue}" 
                                                 VerticalAlignment="Top"/>
                                        <TextBlock Grid.Column="0" Text="👤" FontSize="16" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Top" Margin="0,8,0,0"/>

                                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                            <TextBlock TextWrapping="Wrap" FontSize="13" 
                                                       Foreground="{StaticResource DarkText}">
                                                <Run Text="deku vừa bán đơn hàng với giá trị"/>
                                                <Run Text="90,000" FontWeight="Bold"/>
                                            </TextBlock>
                                            <TextBlock Text="5 minutes ago" FontSize="11" 
                                                       Foreground="{StaticResource GrayText}" 
                                                       Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <Border BorderBrush="{StaticResource BorderGray}" 
