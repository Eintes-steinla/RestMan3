<Window x:Class="RestMan3.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestMan3.Views"
        mc:Ignorable="d"
        Title="LoginView" Height="600" Width="1000"
        Icon="/Assets/Images/logo.png"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="Black">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Images/bglogin.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Background="Transparent"/>

        <Border Width="450" VerticalAlignment="Center" HorizontalAlignment="Center"
                Background="White" CornerRadius="15" Padding="40,30">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.2"/>
            </Border.Effect>

            <StackPanel>
                <Image Source="/Assets/Images/logo.png" 
                       Height="60" Margin="0,0,0,10"/>

                <Border Background="#E3F2FD" CornerRadius="15" HorizontalAlignment="Center" Padding="15,5" Margin="0,0,0,10">
                    <TextBlock Text="Bar - Cafe, Nhà hàng, Karaoke &amp; Billiards" Foreground="#1976D2" FontSize="13"/>
                </Border>

                <StackPanel Margin="0,0,0,20">
                    <Grid>
                        <Image Panel.ZIndex="1" Source="/Assets/Icons/iconsStore60.png" Height="20" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0"/>
                        <!--<TextBlock Text="🏪" VerticalAlignment="Center" Margin="5,0"/>-->
                        <TextBox x:Name="txtStore" Tag="Tên gian hàng" Margin="30,0,0,0"
                                 BorderThickness="0,0,0,1" BorderBrush="#DDD" Height="35"
                                 VerticalContentAlignment="Center" FontSize="15" ToolTip="Tên gian hàng"/>
                        <TextBlock IsHitTestVisible="False" 
                   Text="Tên gian hàng" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" 
                   Margin="35,0,0,0" 
                   Foreground="DarkGray" 
                   FontSize="15">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=txtStore}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </StackPanel>

                <StackPanel Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="52*"/>
                            <ColumnDefinition Width="133*"/>
                        </Grid.ColumnDefinitions>

                        <Image Panel.ZIndex="1" Source="/Assets/Icons/iconsUser64.png" 
               Height="20" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0"/>

                        <TextBox x:Name="txtUser" Margin="30,0,0,0"
                 BorderThickness="0,0,0,1" BorderBrush="#DDD" Height="35"
                 VerticalContentAlignment="Center" FontSize="15" Grid.ColumnSpan="2"/>

                        <TextBlock IsHitTestVisible="False" 
                   Text="Tên đăng nhập" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" 
                   Margin="35,0,0,0" 
                   Foreground="DarkGray" 
                   FontSize="15"
                   Grid.ColumnSpan="2">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=txtUser}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </StackPanel>

                <StackPanel Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="137*"/>
                            <ColumnDefinition Width="233*"/>
                        </Grid.ColumnDefinitions>
                        <Image Panel.ZIndex="1" Source="/Assets/Icons/iconsLock48.png" 
                               Height="20" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0"/>

                        <PasswordBox x:Name="txtPass" Margin="30,0,0,0"
                                     BorderThickness="0,0,0,1" BorderBrush="#DDD" Height="35"
                                     VerticalContentAlignment="Center" FontSize="15"
                                     PasswordChanged="PasswordBox_PasswordChanged" Grid.ColumnSpan="2"/>
                        <TextBlock x:Name="HintPassword"
                                   IsHitTestVisible="False" 
                                   Text="Mật khẩu" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Left" 
                                   Margin="35,0,0,0" 
                                   Foreground="DarkGray" 
                                   FontSize="15"
                                   Visibility="Visible"/>
                    </Grid>
                </StackPanel>

                <TextBlock Text="Quên mật khẩu?" Foreground="#1976D2" HorizontalAlignment="Right" 
                           Cursor="Hand" Margin="0,0,0,30"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Height="45" Background="#007BFF" 
                            Foreground="White" FontWeight="Bold" BorderThickness="0"
                            Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>

                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/Icons/iconsAnalytics60.png" 
                                    Width="20" Height="20" 
                                    Margin="0,0,10,0"
                                    RenderOptions.BitmapScalingMode="HighQuality"/>

                            <TextBlock Text="Quản lý" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Column="2" Height="45" Background="#00C853" 
                            Foreground="White" FontWeight="Bold" BorderThickness="0"
                            Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>

                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/Icons/iconsCart60.png" 
                                   Width="20" Height="20" 
                                   Margin="0,0,10,0"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>

                            <TextBlock Text="Bán hàng" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
        </Border>

        <Border VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,30"
                Background="#CC000000" CornerRadius="20" Padding="20,10">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Assets/Icons/iconsPhone48.png" Height="15" Margin="0,0,10,0"/>
                <TextBlock Text="Hỗ trợ 1900 6522" Foreground="White" Margin="0,0,20,0"/>
                <Image Source="/Assets/Icons/iconsVietnam48.png" Height="15" Margin="0,0,10,0"/>
                <TextBlock Text="Tiếng Việt (VN)" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
