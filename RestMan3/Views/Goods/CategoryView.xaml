<UserControl x:Class="RestMan3.Views.Goods.CategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestMan3.Views.Goods"
             xmlns:helpers="clr-namespace:RestMan3.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="1200" d:DesignWidth="1300">
    <UserControl.Resources>

        <!-- Filter Section Styles -->
        <Style x:Key="FilterGroupStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.05" 
                        BlurRadius="10" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FilterHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

    </UserControl.Resources>

    <Grid Background="{StaticResource LightGray}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar - Filters -->
        <Border Grid.Column="0" Background="Transparent" 
                BorderThickness="0,0,1,0"
                Margin="20,20,0,20">
            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                <StackPanel>
                    <!-- Search Box -->
                    <Border Style="{StaticResource FilterGroupStyle}">
                        <StackPanel>
                            <TextBlock Text="Tìm kiếm" FontSize="14" FontWeight="Bold" Style="{StaticResource FilterHeaderStyle}"/>
                            <Border BorderBrush="{StaticResource BorderGray}" 
                                    BorderThickness="1" 
                                    CornerRadius="4"
                                    Padding="10"
                                    Margin="0,0,0,10">
                                <Grid>
                                    <TextBox x:Name="SearchTextBox"
                                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                             Foreground="{StaticResource GrayText}"
                                             FontSize="14"
                                             BorderThickness="0"
                                             VerticalContentAlignment="Center"
                                             GotFocus="TextBox_GotFocus"
                                             LostFocus="TextBox_LostFocus"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Loại thực đơn -->
                    <Border Style="{StaticResource FilterGroupStyle}">
                        <StackPanel>
                            <Grid Margin="0,0,0,10" VerticalAlignment="Center">
                                <TextBlock Text="Loại thực đơn" FontSize="14" FontWeight="Bold" Style="{StaticResource FilterHeaderStyle}" Margin="0"/>
                                <Image Source="/Assets/Icons/iconsChevronUp48.png" Width="15" Height="15" HorizontalAlignment="Right"/>
                            </Grid>
                            <CheckBox Content="Đồ ăn" Style="{StaticResource FormCheckBoxStyle}" />
                            <CheckBox Content="Đồ uống" Style="{StaticResource FormCheckBoxStyle}"/>
                            <CheckBox Content="Khác" Style="{StaticResource FormCheckBoxStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Loại hàng -->
                    <Border Style="{StaticResource FilterGroupStyle}">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <TextBlock Text="Loại hàng" FontSize="14" FontWeight="Bold" Style="{StaticResource FilterHeaderStyle}" Margin="0"/>
                                <Image Source="/Assets/Icons/iconsChevronUp48.png" Width="15" Height="15" HorizontalAlignment="Right"/>
                            </Grid>
                            <CheckBox Content="Hàng hóa thường" Style="{StaticResource FormCheckBoxStyle}"/>
                            <CheckBox Content="Chế biến" Style="{StaticResource FormCheckBoxStyle}"/>
                            <CheckBox Content="Dịch vụ" Style="{StaticResource FormCheckBoxStyle}"/>
                            <CheckBox Content="Combo - Đóng gói" Style="{StaticResource FormCheckBoxStyle}"/>
                            <CheckBox Content="Combo tùy chọn" Style="{StaticResource FormCheckBoxStyle}"/>
                            <CheckBox Content="Buffet gọi món" Style="{StaticResource FormCheckBoxStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Nhóm hàng -->
                    <Border Style="{StaticResource FilterGroupStyle}">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <TextBlock Text="Nhóm hàng" FontSize="14" FontWeight="Bold" Style="{StaticResource FilterHeaderStyle}" Margin="0"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Image Source="/Assets/Icons/iconsPlusBlack60.png" Width="12" Height="12" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                                    <Image Source="/Assets/Icons/iconsChevronUp48.png" Width="15" Height="15" HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                            <Border BorderBrush="{StaticResource BorderGray}" 
                                    BorderThickness="1" 
                                    CornerRadius="4"
                                    Padding="10"
                                    Margin="0,0,0,10">
                                <Grid VerticalAlignment="Center">
                                    <TextBox x:Name="SearchCategoryTextBox"
                                             Text="Tìm kiếm nhóm hàng"
                                             Foreground="{StaticResource GrayText}"
                                             FontSize="14"
                                             BorderThickness="0"
                                             VerticalContentAlignment="Center"
                                             GotFocus="TextBox_GotFocus"
                                             LostFocus="TextBox_LostFocus"
                                             Padding="15,0,0,0"
                                             />

                                    <Image Source="/Assets/Icons/iconsSearch48.png" 
                                           Width="15" Height="15" 
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           IsHitTestVisible="False"/>
                                </Grid>
                            </Border>
                            <StackPanel x:Name="CategoryList">
                                <StackPanel>
                                    <RadioButton Content="Tất cả" 
                                                 Style="{StaticResource ModernRadioButton}"
                                                 IsChecked="True" />
                                    <RadioButton Content="Súp" 
                                                 Style="{StaticResource ModernRadioButton}" />
                                    <RadioButton Content="Tea" 
                                                 Style="{StaticResource ModernRadioButton}" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Tồn kho -->
                    <Border Style="{StaticResource FilterGroupStyle}">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <TextBlock Text="Tồn kho" FontSize="14" FontWeight="Bold" Style="{StaticResource FilterHeaderStyle}" Margin="0"/>
                                <Image Source="/Assets/Icons/iconsChevronUp48.png" Width="15" Height="15" HorizontalAlignment="Right"/>

                            </Grid>
                            <RadioButton Content="Tất cả" 
                                         Style="{StaticResource ModernRadioButton}"
                                         IsChecked="True"
                                         GroupName="Stock"/>
                            <RadioButton Content="Dưới định mức tồn" 
                                         Style="{StaticResource ModernRadioButton}"
                                         GroupName="Stock"/>
                            <RadioButton Content="Vượt định mức tồn" 
                                         Style="{StaticResource ModernRadioButton}"
                                         GroupName="Stock"/>
                            <RadioButton Content="Còn hàng trong kho" 
                                         Style="{StaticResource ModernRadioButton}"
                                         GroupName="Stock"/>
                            <RadioButton Content="Hết hàng trong kho" 
                                         Style="{StaticResource ModernRadioButton}"
                                         GroupName="Stock"/>
                        </StackPanel>
                    </Border>

                    <!-- Lựa chọn hiển thị -->
                    <Border Style="{StaticResource FilterGroupStyle}">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <TextBlock FontSize="14" FontWeight="Bold" Text="Lựa chọn hiển thị" Style="{StaticResource FilterHeaderStyle}" Margin="0"/>
                                <Image Source="/Assets/Icons/iconsChevronUp48.png" Width="15" Height="15" HorizontalAlignment="Right"/>
                            </Grid>
                            <RadioButton Content="Hàng đang kinh doanh" 
                                         Style="{StaticResource ModernRadioButton}"
                                         IsChecked="True"
                                         GroupName="Display"/>
                            <RadioButton Content="Hàng ngừng kinh doanh" 
                                         Style="{StaticResource ModernRadioButton}"
                                         GroupName="Display"/>
                            <RadioButton Content="Tất cả" 
                                         Style="{StaticResource ModernRadioButton}"
                                         GroupName="Display"/>
                        </StackPanel>
                    </Border>

                    <!-- Số bản ghi -->
                    <Border Style="{StaticResource FilterGroupStyle}">
                        <StackPanel>
                            <TextBlock Text="Số bản ghi:" 
                                       Foreground="{StaticResource GrayText}"
                                       FontSize="13"
                                       Margin="0,0,0,5"/>
                            <ComboBox x:Name="RecordsPerPageComboBox"
                                      Style="{StaticResource ModernComboBox}"
                                      ItemContainerStyle="{StaticResource ModernComboBoxItem}"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="10"/>
                                <ComboBoxItem Content="25"/>
                                <ComboBoxItem Content="50"/>
                                <ComboBoxItem Content="100"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Action Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Header -->
                <Grid Grid.Column="0" Margin="0,0,0,20">
                    <TextBlock Text="Hàng hóa" 
                               FontSize="25" 
                               FontWeight="Bold"
                               Foreground="{StaticResource DarkText}"
                               VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Action Buttons Left -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Grid x:Name="ThemMoiMenu"
                              MouseEnter="MenuContainer_MouseEnter"
                              MouseLeave="MenuContainer_MouseLeave">
                            <Button x:Name="ThemMoiButton" Style="{StaticResource GreenButtonStyle}" 
                                    Margin="0,0,10,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Image Source="/Assets/Icons/iconsPlus60.png" Width="12" Margin="0,0,5,0"/>
                                    <TextBlock Text="Thêm mới" FontSize="15"/>
                                </StackPanel>
                            </Button>

                            <Popup x:Name="ThemMoiPopup" 
                                   PlacementTarget="{Binding ElementName=ThemMoiButton}"
                                   Placement="Custom"
                                   helpers:PopupManager.UseRightAlignedPlacement="True"
                                   StaysOpen="True"
                                   AllowsTransparency="True">
                                <Border Style="{StaticResource SubMenuPopupStyle}" 
                                        MinWidth="200" Margin="0,5,0,0">
                                    <StackPanel>
                                        <Button Content="Thêm hàng hóa" 
                                                Style="{StaticResource SubMenuItemStyle}"
                                                Click="SubMenuItem_Click"/>
                                        <Button Content="Thêm hàng chế biến" 
                                                Style="{StaticResource SubMenuItemStyle}"
                                                Click="SubMenuItem_Click"/>
                                        <Button Content="Thêm dịch vụ" 
                                                Style="{StaticResource SubMenuItemStyle}"
                                                Click="SubMenuItem_Click"/>
                                        <Button Content="Thêm Combo, Buffet gọi món" 
                                                Style="{StaticResource SubMenuItemStyle}"
                                                Click="SubMenuItem_Click"/>
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </Grid>

                        <Button Style="{StaticResource GreenButtonStyle}" 
                                Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/iconsImport52.png" Width="12" Margin="0,0,5,0"/>
                                <TextBlock Text="Import" FontSize="15"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource GreenButtonStyle}" 
                                Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/iconsLogout52.png" Width="12" Margin="0,0,5,0"/>
                                <TextBlock Text="Xuất file" FontSize="15"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource GreenButtonStyle}" 
                                ToolTip="Menu">
                            <Image Source="/Assets/Icons/iconsMenu50.png" Width="15" Height="15"/>
                        </Button>
                    </StackPanel>

                    <!-- Action Buttons Right -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Right"
                                Margin="0,10,0,0">
                        <Button Background="Transparent" 
                                BorderThickness="0"
                                Foreground="{StaticResource PrimaryBlue}"
                                FontSize="14"
                                Cursor="Hand"
                                Margin="0,0,15,0"
                                Style="{StaticResource TransparentButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/iconsQuestionMark64.png" Width="12" Height="12" Margin="0,0,5,0"/>
                                <TextBlock Text="Câu hỏi thường gặp"/>
                            </StackPanel>
                        </Button>

                        <Button Background="Transparent" 
                                BorderThickness="0"
                                Foreground="{StaticResource PrimaryBlue}"
                                FontSize="14"
                                Cursor="Hand"
                                Style="{StaticResource TransparentButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/iconsNotebook40.png" Width="12" Height="12" Margin="0,0,5,0"/>
                                <TextBlock Text="Hướng dẫn sử dụng"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Data Grid -->
            <Border Grid.Row="1" Background="White" CornerRadius="0" BorderBrush="{StaticResource BorderGray}" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DataGrid Grid.Row="0" 
                              x:Name="ProductsDataGrid" 
                              Style="{StaticResource ModernDataGrid}" 
                              ItemsSource="{Binding Products}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <!-- Checkbox Column -->
                            <DataGridTemplateColumn Width="50">
                                <DataGridTemplateColumn.Header>
                                    <CheckBox Style="{StaticResource ModernCheckBox}" 
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox Style="{StaticResource ModernCheckBox}"
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Mã hàng hóa -->
                            <DataGridTextColumn Header="Mã hàng hóa" 
                            Binding="{Binding Code}" 
                            Width="120"/>

                            <!-- Tên hàng -->
                            <DataGridTextColumn Header="Tên hàng" 
                            Binding="{Binding Name}" 
                            Width="200"/>

                            <!-- Loại thực đơn -->
                            <DataGridTextColumn Header="Loại thực đơn" 
                            Binding="{Binding MenuType}" 
                            Width="150"/>

                            <!-- Giá bán -->
                            <DataGridTextColumn Header="Giá bán" 
                            Binding="{Binding PriceDisplay}" 
                            Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Padding" Value="0,0,10,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Giá vốn -->
                            <DataGridTextColumn Header="Giá vốn" 
                            Binding="{Binding CostDisplay}" 
                            Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Padding" Value="0,0,10,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Tồn kho -->
                            <DataGridTextColumn Header="Tồn kho" 
                            Binding="{Binding StockDisplay}" 
                            Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Padding" Value="0,0,10,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Đơn vị -->
                            <DataGridTextColumn Header="Đơn vị" 
                            Binding="{Binding Unit}" 
                            Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Pagination -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <!-- First Page -->
                    <Button Style="{StaticResource IconButtonStyle}" 
                            Margin="0,0,5,0"
                            Command="{Binding FirstPageCommand}">
                        <Image Source="/Assets/Icons/iconsStarts60.png" Width="20" Height="20"/>
                    </Button>

                    <!-- Previous Page -->
                    <Button Style="{StaticResource IconButtonStyle}" 
                            Margin="0,0,5,0"
                            Command="{Binding PreviousPageCommand}">
                        <Image Source="/Assets/Icons/iconsTriangleArrowLeft48.png" Width="14" Height="14"/>
                    </Button>

                    <!-- Page Number Display -->
                    <Button Style="{StaticResource IconButtonStyle}" 
                            Margin="0,0,5,0"
                            FontWeight="Bold"
                            FontSize="15"
                            Content="{Binding CurrentPage}">
                    </Button>
                    <Button Style="{StaticResource IconButtonStyle}" 
                            Margin="0,0,5,0"
                            FontWeight="Bold"
                            FontSize="15"
                            Content="...">
                    </Button>
                    <Button Style="{StaticResource IconButtonStyle}" 
                            Margin="0,0,5,0"
                            FontWeight="Bold"
                            FontSize="15"
                            Content="{Binding TotalPages}">
                    </Button>

                    <!-- Next Page -->
                    <Button Style="{StaticResource IconButtonStyle}" 
                            Margin="0,0,5,0"
                            Command="{Binding NextPageCommand}">
                        <Image Source="/Assets/Icons/iconsTriangleArrowRight48.png" Width="14" Height="14"/>
                    </Button>

                    <!-- Last Page -->
                    <Button Style="{StaticResource IconButtonStyle}" 
                            Margin="0,0,5,0"
                            Command="{Binding LastPageCommand}">
                        <Image Source="/Assets/Icons/iconsEnd60.png" Width="20" Height="20"/>
                    </Button>
                </StackPanel>

                <TextBlock Grid.Column="1" 
                           Text="{Binding PaginationText}"
                           FontSize="14"
                           Foreground="{StaticResource GrayText}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>