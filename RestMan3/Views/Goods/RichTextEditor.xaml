<UserControl x:Class="RestMan3.Views.Goods.RichTextEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Toolbar Button Style -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

    </UserControl.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Ribbon Toolbar -->
        <Border Grid.Row="0" Background="White" BorderBrush="#EEEEEE" BorderThickness="0,0,0,1" Padding="10,8">
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="FormatComboBox" Width="120" SelectedIndex="0" Margin="0,0,8,0" Style="{StaticResource ModernComboBox}">
                    <ComboBoxItem Content="Paragraph"/>
                    <ComboBoxItem Content="Heading 1" FontWeight="Bold" FontSize="18"/>
                    <ComboBoxItem Content="Heading 2" FontWeight="Bold" FontSize="16"/>
                </ComboBox>

                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="4,0"/>

                <Button x:Name="BoldButton" Style="{StaticResource ToolbarButtonStyle}" Click="BoldButton_Click" ToolTip="Bold (Ctrl+B)">
                    <TextBlock Text="B" FontWeight="Bold" FontSize="16"/>
                </Button>
                <Button x:Name="ItalicButton" Style="{StaticResource ToolbarButtonStyle}" Click="ItalicButton_Click" ToolTip="Italic (Ctrl+I)">
                    <TextBlock Text="I" FontStyle="Italic" FontSize="16"/>
                </Button>
                <Button x:Name="UnderlineButton" Style="{StaticResource ToolbarButtonStyle}" Click="UnderlineButton_Click" ToolTip="Underline (Ctrl+U)">
                    <TextBlock Text="U" TextDecorations="Underline" FontSize="16"/>
                </Button>

                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="4,0"/>

                <Button x:Name="AlignLeftButton" Style="{StaticResource ToolbarButtonStyle}" Click="AlignLeftButton_Click" ToolTip="Align Left">
                    <Image Source="/Assets/Icons/iconsAlignLeft48.png" Width="15"/>
                </Button>
                <Button x:Name="AlignCenterButton" Style="{StaticResource ToolbarButtonStyle}" Click="AlignCenterButton_Click" ToolTip="Align Center">
                    <Image Source="/Assets/Icons/iconsAlignCenter48.png" Width="15"/>
                </Button>
                <Button x:Name="AlignRightButton" Style="{StaticResource ToolbarButtonStyle}" Click="AlignRightButton_Click" ToolTip="Align Right">
                    <Image Source="/Assets/Icons/iconsAlignRight48.png" Width="15"/>
                </Button>

                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="4,0"/>

                <Button x:Name="OutdentButton" Style="{StaticResource ToolbarButtonStyle}" Click="OutdentButton_Click" ToolTip="Decrease Indent">
                    <Image Source="/Assets/Icons/iconsOutdent48.png" Width="15"/>
                </Button>
                <Button x:Name="IndentButton" Style="{StaticResource ToolbarButtonStyle}" Click="IndentButton_Click" ToolTip="Increase Indent">
                    <Image Source="/Assets/Icons/iconsIndent48.png" Width="15"/>
                </Button>

                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="4,0"/>

                <Button x:Name="UnorderedListButton" Style="{StaticResource ToolbarButtonStyle}" Click="UnorderedListButton_Click" ToolTip="Unordered List">
                    <Image Source="/Assets/Icons/iconsList48.png" Width="18"/>
                </Button>
                <Button x:Name="OrderedListButton" Style="{StaticResource ToolbarButtonStyle}" Click="OrderedListButton_Click" ToolTip="Ordered List">
                    <Image Source="/Assets/Icons/iconsNumberedList50.png" Width="15"/>
                </Button>
                <Button x:Name="HyperlinkButton" Style="{StaticResource ToolbarButtonStyle}" Click="HyperlinkButton_Click" ToolTip="Insert Hyperlink">
                    <Image Source="/Assets/Icons/iconsHyperlink50.png" Width="15"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- RichTextBox Content Area -->
        <Border Grid.Row="1" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" Margin="10,0,10,10">
            <RichTextBox x:Name="RichTextContentBox" 
                         Background="White"
                         Foreground="#333333"
                         Padding="12,10"
                         FontSize="14"
                         FontFamily="Segoe UI"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         SpellCheck.IsEnabled="False"
                         AllowDrop="True">
                <RichTextBox.Document>
                    <FlowDocument PagePadding="0">
                        <Paragraph/>
                    </FlowDocument>
                </RichTextBox.Document>
            </RichTextBox>
        </Border>
    </Grid>
</UserControl>
